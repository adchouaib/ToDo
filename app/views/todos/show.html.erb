<section class="container">
  <div class="heading">
    <img class="heading__img" src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/756881/laptop.svg">
    <h1 class="heading__title"><%= @todo.title %></h1>
  </div>
  
  <div>
    <p class="form__label"><%= @todo.body%> </p>
  </div>
    <%=link_to "<button class=button><span>Return</span></button>".html_safe, root_path %>
    <div class="element">
      <%=link_to "<button class=button><span>Edit</span></button>".html_safe, edit_todo_path(@todo)  %>
      <%= link_to "<button class=button><span>Delete</span></button>".html_safe, todo_path(@todo),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
    <div>
</section>